{
    "manifest_Version": 2,
    "name": "PKI-Extension",
    "version": "1.0",

    "description": "Helps to keep websites listed as secure/unsecure by asking the user and observing the digital certificate.",
    "icons": {
        "48": "icons/nsf-48.png"
    },

    "permissions": [
        "storage"
    ],

    "background": {
        "scripts": "background_scripts/background.js",
        "persistent": false
    },

    "browser-actions": {
        "default_title": "Extension Trial",
        "defaul_popup": "popup/change.html"
    }
}